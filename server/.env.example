# MongoDB: local or Atlas connection string
# Local: mongodb://localhost:27017/runbarbie
# Atlas: mongodb+srv://USER:PASSWORD@cluster0.xxxxx.mongodb.net/runbarbie?retryWrites=true&w=majority
MONGODB_URI=mongodb://localhost:27017/runbarbie

JWT_SECRET=your-secret-key-change-in-production
PORT=3000

# Optional: SMTP for sending verification codes. If not set, codes are logged to the server console.
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your-email@example.com
MTP_PASS=your-app-password
SMTP_FROM=RunBarbie <noreply@example.com>

# Cloudinary (photos + videos). Get from https://cloudinary.com/console
CLOUDINARY_CLOUD_NAME=
CLOUDINARY_API_KEY=
CLOUDINARY_API_SECRET=
